{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Termalime",
  "version": "0.2.0",
  "identifier": "termaline",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Termalime",
        "width": 1280,
        "height": 800,
        "minWidth": 1100,
        "minHeight": 650
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ]
  }
}
